@model IEnumerable<PartyInvitation.Models.InviteeResponse>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "People coming at the Party";    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Response</title>
</head>
<body>
    <h2 class="text-center">Here is the list of people attending the party</h2>
    <div class="container">
        <table class="table table-hover">
            <thead>
               <tr><th>Name</th><th>Email</th><th>Phone</th></tr>
            </thead>
            <tbody>
                @foreach(PartyInvitation.Models.InviteeResponse r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>